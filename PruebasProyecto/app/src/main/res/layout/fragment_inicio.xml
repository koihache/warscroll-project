<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioFragment"
    android:background="@drawable/fondosecundario"
    >

    <TextView
        android:id="@+id/text_inicio_bienvenida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Bienvenido,"
        android:fontFamily="@font/kanit_regular"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_inicio_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kanit_regular"
        android:text=""
        android:textColor="@color/color1"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/text_inicio_bienvenida"
        app:layout_constraintTop_toBottomOf="@+id/text_inicio_bienvenida" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardWarcry"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/color5"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_inicio_nombre_usuario">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/warcry"
            android:padding="20dp">

            <TextView
                android:id="@+id/label_conoce_warcry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="@string/inicio_carta_conoce"

                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="162dp"
                android:layout_height="79dp"
                android:src="@drawable/logowarcry"
                app:layout_constraintEnd_toEndOf="@+id/label_conoce_warcry"
                app:layout_constraintStart_toStartOf="@+id/label_conoce_warcry"
                app:layout_constraintTop_toBottomOf="@+id/label_conoce_warcry" />


            <Button
                android:id="@+id/boton_inicio_sabermas_warcry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:text="@string/inicio_boton_sabermas"
                android:textColor="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardKillteam"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="15dp"
        app:cardBackgroundColor="@color/color5"
        app:cardCornerRadius="10dp"
        app:cardElevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardWarcry"
        app:layout_constraintStart_toStartOf="@+id/cardWarcry"
        app:layout_constraintTop_toBottomOf="@+id/cardWarcry">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/killteam"
            android:padding="20dp">

            <TextView
                android:id="@+id/label_conoce_killteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/kanit_regular"
                android:text="@string/inicio_carta_conoce"

                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="162dp"
                android:layout_height="79dp"
                android:src="@drawable/logokillteam"
                app:layout_constraintEnd_toEndOf="@+id/label_conoce_killteam"
                app:layout_constraintStart_toStartOf="@+id/label_conoce_killteam"
                app:layout_constraintTop_toBottomOf="@+id/label_conoce_killteam" />

            <Button
                android:id="@+id/boton_inicio_sabermas_killteam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/kanit_regular"
                android:text="@string/inicio_boton_sabermas"
                android:textColor="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>