<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LoginFragment">

    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.pruebasproyecto.LoginFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_LoginFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />
        <action
            android:id="@+id/action_Login_to_SecondActivity"
            app:destination="@id/SecondActivity" />
    </fragment>
    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.pruebasproyecto.RegisterFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/LoginFragment" />
        <argument
            android:name="correo"
            app:argType="string" />
        <argument
            android:name="contrasenia"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/SecondActivity"
        android:name="com.example.pruebasproyecto.SecondActivity"
        android:label="activity_second"
        tools:layout="@layout/activity_second" />
    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.pruebasproyecto.InicioFragment"
        android:label="fragment_inicio"
        tools:layout="@layout/fragment_inicio" >
        <action
            android:id="@+id/action_inicioFragment_to_ajustesFragment"
            app:destination="@id/ajustesFragment" />
    </fragment>
    <fragment
        android:id="@+id/ajustesFragment"
        android:name="com.example.pruebasproyecto.AjustesFragment"
        android:label="fragment_ajustes"
        tools:layout="@layout/fragment_ajustes" />
</navigation>